# ===== Claude Code CLI Configuration =====
# Claude Code uses your Claude Pro subscription (no API key needed)
# Install: npm install -g @anthropic-ai/claude-code
# Then login: claude login
CLAUDE_CODE_PATH=claude
CLAUDE_CODE_TIMEOUT=300
CLAUDE_CODE_MODEL=sonnet

# ===== Obsidian Vault Configuration =====
VAULT_PATH=../AI_Employee_Valut

# ===== Watcher Configuration =====
# Gmail Watcher
GMAIL_ENABLED=true
GMAIL_POLL_INTERVAL=60

# WhatsApp Watcher (coming soon)
WHATSAPP_ENABLED=false
WHATSAPP_POLL_INTERVAL=120

# Filesystem Watcher
FILESYSTEM_ENABLED=true

# ===== MCP Server Configuration =====
MCP_EMAIL_ENABLED=true
MCP_BROWSER_ENABLED=false

# ===== Google API (Gmail) =====
# Download OAuth credentials from: https://console.cloud.google.com/
# Guide: https://developers.google.com/gmail/api/quickstart/python
GOOGLE_CREDENTIALS_PATH=credentials.json
GOOGLE_TOKEN_PATH=.google_token.json

# ===== Human-in-the-Loop (HITL) =====
HITL_AUTO_APPROVE_KNOWN_CONTACTS=false
HITL_CONFIDENCE_THRESHOLD=0.85

# ===== Ralph Wiggum Autonomous Loop =====
RALPH_ENABLED=true
RALPH_MAX_ITERATIONS=5
RALPH_INTERVAL_SECONDS=300

# ===== CEO Briefing Configuration =====
BRIEFING_ENABLED=true
BRIEFING_DAY=0
BRIEFING_TIME=06:00

# ===== Logging Configuration =====
LOG_LEVEL=INFO
AUDIT_LOG_RETENTION_DAYS=90

# ===== System Configuration =====
MAX_CONCURRENT_TASKS=3
ERROR_RETRY_ATTEMPTS=3
ERROR_RETRY_DELAY_SECONDS=60
HEALTH_CHECK_INTERVAL=300
